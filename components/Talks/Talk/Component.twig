<div class="{{ rootElementClass }} {{ stateClasses }}">
    <div class="{{ 'title'|bemClass }}">
        <span>{{ talkRow.number }}</span> <span>{{ talkRow.getTitle(language) }}</span>
        {% if state.specialTalk %}
            <span class="{{ 'specialTalk'|bemClass }}">{{ state.specialTalk|date(data.trl('d.m.Y')) }}</span>
        {% endif %}
        {% if state.removed %}
            <span class="{{ 'removed'|bemClass }}">{{ state.removed|date(data.trl('d.m.Y')) }}</span>
        {% endif %}
        {% if state.lastDispoChange %}
            <span class="{{ 'lastDispoChange'|bemClass }}">{{ state.lastDispoChange|date(data.trl('d.m.Y')) }}</span>
        {% endif %}
        {% if state.existingSince %}
            <span class="{{ 'existingSince'|bemClass }}">{{ state.existingSince|date(data.trl('d.m.Y')) }}</span>
        {% endif %}
    </div>
    {% if talkRow.getChildRows('TalksToCategories')|length > 0 %}
        <div class="{{ 'categoriesRegion'|bemClass }}">
            <div class="{{ 'categoryLink'|bemClass }}">{{ data.trl('Kategorien') }}:</div>
            <ul class="{{ 'category'|bemClass }}">
                {% for talkToCategoryRow in talkRow.getChildRows('TalksToCategories') %}
                    <li>{{ talkToCategoryRow.getParentRow('Category').getCategoryTitle(language) }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
</div>
